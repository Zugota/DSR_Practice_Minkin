@model Employee

@{
	var photoPath = $"{Model.PhotoPath ?? "/images/noimage.png"}";
	var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="row">
	
	<div class="col-12 col-sm-6, col-lg-10">
		<div class="card-deck">
			<div class="card m-3 cardBoxShadow">
				<div class="card-header text-center cardHeaderStyle">
					<h3>@Model.Name</h3>
				</div>
				<div class="text-center cardBodyStyle">
					<img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
				</div>

				@if (showButtons)
				{
					<div class="card-footer text-center">
						<a asp-page="/Employees/Details" asp-route-Id="@Model.Id" class="btn btn-success m-1 buttonShadow">View</a>
						<a asp-page="/Employees/Editor" asp-route-Id="@Model.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
						<a asp-page="/Employees/Delete" asp-route-Id="@Model.Id" class="btn btn-danger m-1 buttonShadow">Delete</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>