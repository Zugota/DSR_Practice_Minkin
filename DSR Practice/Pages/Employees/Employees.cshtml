@page
@model DSR_Practice.Pages.Employees.EmployeesModel
@{
	ViewData["Title"] = "Employees";
}

<h1>Employees</h1>
<h3>@Model.Employees.Count()</h3>

<div class="row">
	@foreach(var i in Model.Employees) {
		var photoPath = $"{i.PhotoPath ?? "/images/noimage.png"}";
		<div class="col-12 col-sm-6, col-lg-4">
			<div class="card-deck">
				<div class="card m-3 cardBoxShadow">
					<div class="card-header text-center cardHeaderStyle">
						<h3>@i.Name</h3>
					</div>
					<div class="text-center cardBodyStyle">
						<img class="card-img-top imageThumbnail" src = "@photoPath" asp-append-version = "true"/>
					</div>

					<div class="card-footer text-center">
						<a href="#" class="btn btn-success m-1 buttonShadow">View</a>
						<a href="#" class="btn btn-primary m-1 buttonShadow">Edit</a>
						<a href="#" class="btn btn-danger m-1 buttonShadow">Delete</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>